{% trans_default_domain 'FOSUserBundle' %}


<div class="change_password">
    {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
    <div class="form-group form-group-control">
        {% if form_errors(form.current_password) is not empty %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{ form_errors(form.current_password) }}
            </div>
        {% endif %}
        {{ form_widget(form.current_password, {'attr': {'class': 'form-control', 'placeholder': 'Votre mot de passe actuel' } }) }}
    </div>

    <div class="form-group form-group-control">
        {% if form_errors(form.plainPassword.first) is not empty %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{ form_errors(form.plainPassword.first) }}
            </div>
        {% endif %}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Nouveau mot de passe' } }) }}
    </div>

    <div class="form-group form-group-control">
        {% if form_errors(form.plainPassword.second) is not empty %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{ form_errors(form.plainPassword.second) }}
            </div>
        {% endif %}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Répétez le nouveau mot de passe' } }) }}
    </div>
    {{ form_rest(form) }}
    <div class="float-right">
        <input type="submit" class="btn btn-info" value="{{ 'change_password.submit'|trans }}" />
    </div>
    {{ form_end(form) }}

</div>
