{% extends '@KvikAdmin/User/formType.html.twig' %}

{% block title %}Créer un utilisateur{% endblock title %}

{% block page_h1 %}<h1>Créer un utilisateur</h1>{% endblock %}

{% block add_in_accountInfos %}
    {# password #}
    <div class="form-group">
        {{ form_errors(form.plainPassword.first) }}
        {{ form_label(form.plainPassword.first, 'Mot de passe *') }}
        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': '' } }) }}
    </div>
    {# confirm password #}
    <div class="form-group">
        {{ form_errors(form.plainPassword.second) }}
        {{ form_label(form.plainPassword.second, 'Confirmez le mot de passe *') }}
        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': '' } }) }}
    </div>
{% endblock %}

