{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<div class="row">

    <div class="col-md-4 offset-md-4">
        {# Welcome Message - Logo #}
        <div class="welcome text-center">
            <h1><i class="fab fa-pagelines"></i> {{ site_name }} - Administration</h1>
        </div>

        {# Login form #}
        <div class="card">
            <div class="card-header text-white bg-info">
                <h5 class="card-title"><i class="fas fa-unlock-alt"></i> Connexion</h5>
            </div>
            <div class="card-body">
                <hr class="colorgraph">

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="form-group form-group-control row">
                        <label for="username" class="col-4 col-form-label">{{ 'security.login.username'|trans }} *</label>
                        <input type="text" id="username" class="col-8 form-control" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
                    </div>

                    <div class="form-group form-group-control row">
                        <label for="password" class="col-4 col-form-label">{{ 'security.login.password'|trans }}</label>
                        <input type="password" id="password" class="col-8 form-control" name="_password" required="required" autocomplete="current-password" />
                    </div>

                    <div class="form-group">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
                    </div>

                    <input type="submit" id="_submit" class="btn btn-info float-right" name="_submit" value="{{ 'security.login.submit'|trans }}" />
                </form>
            </div>
            <div class="card-footer text-muted text-center">
                <a href="#">Mot de passe oubli√©</a>
            </div>
        </div>

    </div>
</div>

